int checkScore()
{
  FILE *ptr;
  ptr = fopen("hiScore.txt", "r");
  int hiScore = 0;
  if( ptr == NULL)
  {
    return hiScore;
  }

  fscanf(ptr, "%d", &hiScore);
  fclose(ptr);
  return hiScore;
}

void updateHiScore(int score)
{
  FILE *ptr; 
  ptr = fopen("hiScore.txt", "w");
  fprintf(ptr, "%d", score);

  fclose(ptr);
}

int dmg(int health)
{
  health--;
  return health;
}
